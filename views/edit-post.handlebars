      <div class="px-4 py-6 sm:px-0">
            <section>
                <h2 class="text-xl mt-2">Edit Post</h2>

                <form class="mt-2 edit-post-form">
                    <div>
                        <input type="text" id="post-title" name="post-title" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-200 rounded-md p-2" value="{{post.title}}"/>
                    </div>
                    <div>
                        <textarea type="text" id="post-text" name="post-text"class="mt-1 focus:ring-indigo-500 focus:border-indigo-500  block w-full shadow-sm border-2 border-gray-200 sm:text-sm rounded-md h-40 p-2" >{{post.post_text}}</textarea>
                    </div>
                    <button type="submit" class="mt-2 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save post</button>
                    <button type="button" class="mt-2 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 delete-post-btn">Delete post</button>
                </form>
            </section>
      </div>

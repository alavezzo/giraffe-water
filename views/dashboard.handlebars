 <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">
        <div class="p-4 border-4 border-dashed border-gray-200 rounded-lg">
            <section>
                <h2 class="text-xl">Create New Post</h2>

                <form class="mt-2 new-post-form">
                    <div>
                        <label for="post-title">Title</label>
                        <input type="text" id="post-title" name="post-title" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-200 rounded-md"/>
                    </div>
                    <div>
                        <label for="post-text">Content</label>
                        <textarea type="text" id="post-text" name="post-text" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500  block w-full shadow-sm border-2 border-gray-200 sm:text-sm rounded-md h-40" ></textarea>
                    </div>
                    <button type="submit" class="mt-2 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create</button>
                </form>

            </section>
        </div>
      </div>
    </div>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="rounded-lg">
        {{#if posts.length}}
            <section>
                <h2 class="text-xl">Your Posts</h2>
                <ol>
            {{#each posts as |post|}}
                    <li>
                    {{> post-user-info post}}
                    </li>
                    {{/each}}
                </ol>
            </section>
            {{/if}}
        </div>
    </div>

<script src="/js/add-post.js"></script>
{{> post-info post}}
 
{{#if loggedIn}}
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
            <h2 class="text-lg">Add Comment</h2>
            <form class="comment-form">
                <div>
                    <textarea name="comment-body" class="mt-1 shadow p-2 focus:ring-indigo-500 focus:border-indigo-500  block w-full shadow-sm border-2 bg-gray-100 sm:text-sm rounded-md"></textarea>
                </div>

                <div>
                    <button type="submit" class="mt-2 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save</button>
                </div>
            </form>
    </div>
{{/if}}


{{> comments post.comments}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}




